{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/components/Cards/SessionCharacterCard.js",
		"src/components/Forms/FormAddCharacter.js",
		"src/components/BattleRoomDesk.js",
		"src/components/DotsMenu.js",
		"src/components/Navbar.js",
		"src/components/Forms/FormModalNewGame.js",
		"src/components/Forms/FormModalNewCharacter.js",
		"src/components/Forms/FormAddCharacterToSession.js"
	],
	"exclude": ["node_modules"]
}
